  <%= render "shared/page_title" ,title: 'All Recipes'%>

  <ul class="nav nav-tabs">
    <li class = 'active'>
       <%= link_to "Recipes", recipes_path %>
    </li>
    <li>
    <%= link_to 'chefs', chefs_path %>
  </li>
  </ul>
  
  
  <%= will_paginate %>


    <% @recipes.each do |recipe| %>
      <div class="row">
        <div class="col-md-2">
           <section  class="chef_info center">
           	<%= link_to gravatar_for(recipe.chef, size: 100), chef_path(recipe.chef) %>
            <h5>Chef.name <%= recipe.chef.chefs%></h5>
           </section>
           <hr/>
        </div>	

        <div class="col-md-6 well">
        	<%= link_to recipe.name, recipe_path(recipe) %>
        	<p><%= recipe.summary %></p>
          <p>
            <span class = "quiet"><em>Created:&nbsp<%= time_ago_in_words(recipe.created_at)  %></em>&nbsp ago</span>
          </p>
          <p>
            <span class = "quiet"><em>Updated:&nbsp<%= time_ago_in_words(recipe.updated_at)  %></em>&nbsp ago</span>
          </p>
           <div class="pull-right">
              <%= link_to like_recipe_path(recipe, like: true), method: :post do  %>
              <i class = "glyphicon glyphicon-thumbs-up"></i> &nbsp <%= recipe.thumbs_up_total %>
              <% end %>&nbsp&nbsp&nbsp&nbsp
              <%= link_to like_recipe_path(recipe, like: false), method: :post do  %>
              <i class = "glyphicon glyphicon-thumbs-down"></i> &nbsp <%= recipe.thumbs_down_total %>
              <% end %>
            </div>
        </div>
        <div class="col-md-4">
          <%= image_tag(recipe.picture.url, size: "250x150", class: "gravatar" ) if recipe.picture?  %>
        </div>

      </div>
    <% end %>

    <%= will_paginate %>
